# Production Environment Configuration
# Copy this file to .env.production and update with your values

# Environment
NODE_ENV=production

# Server
PORT=3000

# MongoDB
# IMPORTANT: Use strong passwords!
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
MONGO_DATABASE=linkedin_agent

# Redis
# IMPORTANT: Use a different strong password!
REDIS_PASSWORD=CHANGE_THIS_TO_DIFFERENT_STRONG_PASSWORD

# JWT Secret
# Copy from your local .env or generate new with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_MIN
JWT_EXPIRES_IN=30d

# Stripe
# Get from https://dashboard.stripe.com/apikeys
# Use LIVE keys for production, TEST keys for testing
STRIPE_SECRET_KEY=sk_live_your_live_key_or_sk_test_for_testing
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_STARTER=price_your_starter_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_ENTERPRISE=price_your_enterprise_price_id

# Frontend
# Update with your Chrome extension ID or domain
FRONTEND_URL=chrome-extension://your_chrome_extension_id_here

# Or if using domain:
# FRONTEND_URL=https://api.yourdomain.com
